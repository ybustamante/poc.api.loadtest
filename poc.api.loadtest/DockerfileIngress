FROM nginx
EXPOSE 7443

COPY poc.api.loadtest/nginx/nginx.conf etc/nginx/nginx.conf
#COPY poc.api.loadtest/nginx/cert/ etc/ssl/

RUN cd /etc && mkdir ssl; \
    echo "$SSL_Server_Certificate" >> /etc/ssl/SSL_Server_Certificate.crt \
    echo "$SSL_Server_key" >> /etc/ssl/SSL_Server_key.key \
    echo "$SSL_Client_Certificate" >> /etc/ssl/SSL_Client_Certificate.pem